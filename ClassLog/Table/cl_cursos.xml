<?xml version="1.0" encoding="UTF-8"?>

<table>
  <column>
    <name>id</name>
    <type>serial</type>
    <null>NO</null>
  </column>
  <column>
    <name>nombre</name>
    <type>character varying(100)</type>
    <null>NO</null>
  </column>
  <column>
        <name>descripcion</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>profesor_id</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>icono</name>
        <type>character varying(50)</type>
        <default>'book'</default>
        <null>YES</null>
    </column>
    <column>
        <name>color</name>
        <type>character varying(7)</type>
        <default>'#3B82F6'</default>
        <null>YES</null>
    </column>
    <constraint>
        <name>cl_cursos_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>cl_cursos_profesor_fkey</name>
        <type>FOREIGN KEY (profesor_id) REFERENCES cl_profesores (id)</type>
    </constraint>
</table>