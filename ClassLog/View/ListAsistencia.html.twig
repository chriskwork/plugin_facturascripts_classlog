{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-calendar-check fa-fw"></i> Clases de Hoy
                            </h3>
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> {{ "now"|date('l, d/m/Y') }}
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% set horarios = fsc.getHorariosHoy() %}
                    
                    {% if horarios|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="thead-light">
                                    <tr>
                                        <th><i class="fas fa-book"></i> Curso</th>
                                        <th><i class="fas fa-clock"></i> Hora Inicio</th>
                                        <th><i class="fas fa-clock"></i> Hora Fin</th>
                                        <th><i class="fas fa-door-open"></i> Aula</th>
                                        <th width="180" class="text-center">AcciÃ³n</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for horario in horarios %}
                                    <tr>
                                        <td>
                                            <strong>{{ fsc.getCursoNombre(horario.curso_id) }}</strong>
                                        </td>
                                        <td>
                                            <span class="badge badge-info">
                                                {{ horario.hora_inicio }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-info">
                                                {{ horario.hora_fin }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if horario.aula %}
                                                <span class="badge badge-secondary">
                                                    {{ horario.aula }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ asset('EditAsistencia') }}?code={{ horario.id }}" 
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-user-check"></i> Pasar Asistencia
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> 
                                <strong>Total:</strong> {{ horarios|length }} clase(s) programada(s) para hoy
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <h5>No hay clases programadas para hoy</h5>
                            <p class="mb-0 text-muted">Disfruta tu dÃ­a libre ðŸ˜Š</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
